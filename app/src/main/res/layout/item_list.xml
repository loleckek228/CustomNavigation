<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_material"
    android:layout_marginTop="@dimen/margin_material_half"
    android:layout_marginBottom="@dimen/margin_material_half"
    android:background="@drawable/background_list_item"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <TextView
        android:id="@+id/text_view_item"
        style="@style/TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_material"
        android:layout_marginTop="@dimen/margin_material"
        android:layout_marginBottom="@dimen/margin_material"
        android:gravity="center" />

</androidx.cardview.widget.CardView>